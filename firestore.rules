rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // OTP Codes
    match /otp_codes/{phoneId} {
      allow read, write: if true;
    }

    // Users
    match /users/{userId} {
      allow read: if true;
      allow write: if true;

      match /contacts/{contactId} {
        allow read, write: if true;
      }

      match /chat_folders/{folderId} {
        allow read, write: if true;
      }

      match /quick_replies/{replyId} {
        allow read, write: if true;
      }

      match /saved_messages/{msgId} {
        allow read, write: if true;
      }
    }

    // Calls (signaling)
    match /calls/{callId} {
      allow read, write: if true;

      match /callerCandidates/{candidateId} {
        allow read, write: if true;
      }
      match /receiverCandidates/{candidateId} {
        allow read, write: if true;
      }
    }

    // Chats
    match /chats/{chatId} {
      allow read, write: if true;

      match /messages/{messageId} {
        allow read, write: if true;
      }
    }

    // Groups & Communities
    match /groups/{groupId} {
      allow read, write: if true;

      match /messages/{messageId} {
        allow read, write: if true;
      }
    }

    // Banned Users (admin)
    match /banned_users/{userId} {
      allow read, write: if true;
    }

    // App Installs tracking (admin)
    match /app_installs/{userId} {
      allow read, write: if true;
    }

    // App Config (version, updates)
    match /app_config/{docId} {
      allow read: if true;
      allow write: if true;
    }
  }
}
